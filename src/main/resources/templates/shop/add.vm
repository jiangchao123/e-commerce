</head>
<body class="nav-md">

    <div class="container body">
        <div class="main_container">
            #parse("/templates/layout/left.vm")
            #parse("/templates/layout/top.vm")
            <div class="right_col" role="main">


                <div class="">
                    <div class="clearfix"></div>
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="x_panel">
                                <div class="x_name">
                                    <h2>店铺管理 <small>$!operateCh店铺</small></h2>
                                    <ul class="nav navbar-right panel_toolbox">
                                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                        </li>
                                        <li class="dropdown">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                            <ul class="dropdown-menu" role="menu">
                                                <li><a href="#">Settings 1</a>
                                                </li>
                                                <li><a href="#">Settings 2</a>
                                                </li>
                                            </ul>
                                        </li>
                                        <li><a class="close-link"><i class="fa fa-close"></i></a>
                                        </li>
                                    </ul>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="x_content">
                                    <form class="form-horizontal" action="/shop/$operateEn" method="post" enctype="multipart/form-data">
                                        <input type="hidden" class="form-control" id="id" name="id" value="$!shop.id" />
                                        <div class="form-group">
                                            <label for="shopname" class="col-sm-2 control-label">店铺名</label>
                                            <font color="#FF0000">**</font><span id="msg_shopname" style="color:red"></span>
                                            <div class="col-sm-8">
                                                <input type="text" class="form-control" id="shopname" name="shopname" value="$!shop.shopname" placeholder="shopname"/>
                                                #if ($bindingResult)
                                                    <span id="msg" style="color:red">$!bindingResult.getFieldError("shopname").getDefaultMessage()</span>
                                                #end
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="userId" class="col-sm-2 control-label">店主名</label>
                                            <font color="#FF0000">**</font><span id="msg_userId" style="color:red"></span>
                                            <div class="col-sm-8">
                                                <select class="form-control" id="userId" name="userId" value="$!shop.userId">
                                                    #foreach($user in $users)
                                                        <option value="$user.id" #if($shop.userId == $user.id) selected="selected" #end>$user.nickname</option>
                                                    #end
                                                </select>
                                                #if ($bindingResult)
                                                    <span id="msg" style="color:red">$!bindingResult.getFieldError("userId").getDefaultMessage()</span>
                                                #end
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="description" class="col-sm-2 control-label">店铺简介</label>
                                            <font color="#FF0000">**</font><span id="msg_description" style="color:red"></span>
                                            <div class="col-sm-8">
                                                <input type="text" class="form-control" id="description" name="description" value="$!shop.description" placeholder="description"/>
                                                #if ($bindingResult)
                                                    <span id="msg" style="color:red">$!bindingResult.getFieldError("description").getDefaultMessage()</span>
                                                #end
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="address" class="col-sm-2 control-label">店铺地址</label>
                                            <div class="col-sm-8">
                                                <input type="text" class="form-control" id="address" name="address" value="$!shop.address" placeholder="address"/>
                                                #if ($bindingResult)
                                                    <span id="msg" style="color:red">$!bindingResult.getFieldError("address").getDefaultMessage()</span>
                                                #end
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-sm-offset-2 col-sm-10">
                                                <input type="submit"  value="$!operateCh">
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
            <!-- footer content -->
            <footer>
                <div class="">
                    <p class="pull-right">Gentelella Alela! a Bootstrap 3 template by <a>Kimlabs</a>. |
                        <span class="lead"> <i class="fa fa-paw"></i> Gentelella Alela!</span>
                    </p>
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>

    <div id="custom_notifications" class="custom-notifications dsp_none">
        <ul class="list-unstyled notifications clearfix" data-tabbed_notifications="notif-group">
        </ul>
        <div class="clearfix"></div>
        <div id="notif-group" class="tabbed_notifications"></div>
    </div>

    <script src="/js/bootstrap.min.js"></script>

    <!-- gauge js -->
    <script type="text/javascript" src="/js/gauge/gauge.min.js"></script>
    <script type="text/javascript" src="/js/gauge/gauge_demo.js"></script>
    <!-- chart js -->
    <script src="/js/chartjs/chart.min.js"></script>
    <!-- bootstrap progress js -->
    <script src="/js/progressbar/bootstrap-progressbar.min.js"></script>
    <script src="/js/nicescroll/jquery.nicescroll.min.js"></script>
    <!-- icheck -->
    <script src="/js/icheck/icheck.min.js"></script>
    <!-- daterangepicker -->
    <script type="text/javascript" src="/js/moment.min.js"></script>
    <script type="text/javascript" src="/js/datepicker/daterangepicker.js"></script>

    <script src="/js/custom.js"></script>

    <!-- skycons -->
    <script src="/js/skycons/skycons.js"></script>

    <script>
        NProgress.done();
    </script>
    <!-- /datepicker -->
    <!-- /footer content -->
</body>

</html>
